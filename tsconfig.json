{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "outDir": "out",
    "emitDecoratorMetadata": true
  },
  "include": [
        "/**/*.ts"
    ],
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "dev",
    "reports",
    "/**/*.spec.ts",
    "**/*spec.ts"
  ],
  "version": "2.0.6"
}